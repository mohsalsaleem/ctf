<h1>Editing event</h1>

<%= form_for(@event, :html => { :multipart => true } ) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.cktext_area :description %>
  </div>
  <div class="field">
    <%= f.label :excerpt %><br>
    <%= f.text_field :excerpt %>
  </div>
  <div>
  	  <%= f.label :featured_image, "Featured image" %>
  	<h3> already present image is this :</h3><br>
  	<%= image_tag @event.featured_image.url %>

    <h3> in case u want to change </h3>
      <%= f.file_field :featured_image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>




